<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="First Name"
                        android:drawableLeft="@drawable/name"
                        style="@style/label"/>

                    <EditText
                        android:id="@+id/firstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="First Name"
                        android:ems="6"
                        android:inputType="textPersonName"
                        style="@style/inputFields"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Last Name"
                        style="@style/label"/>

                    <EditText
                        android:id="@+id/lastName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Last Name"
                        android:ems="8"
                        android:inputType="textPersonName"
                        style="@style/inputFields"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:drawableLeft="@drawable/username"
                    style="@style/label"/>

                <EditText
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:ems="10"
                    android:inputType="textPersonName"
                    style="@style/inputFields"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Password" android:drawableLeft="@drawable/password" style="@style/label"/>
                    <EditText android:id="@+id/password" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="Password" android:ems="6" android:inputType="textPassword" style="@style/inputFields"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:paddingLeft="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Confirm Password" style="@style/label"/>
                    <EditText android:id="@+id/confirmPassword" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="Confirm Password" android:ems="8" android:inputType="textPassword" style="@style/inputFields"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="E-Mail" android:drawableLeft="@drawable/email" style="@style/label"/>
                <EditText android:id="@+id/email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="E-Mail" android:ems="10" android:inputType="textPersonName" style="@style/inputFields"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Mobile No" android:drawableLeft="@drawable/phone" style="@style/label"/>
                <EditText android:id="@+id/contact" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="Mobile No" android:ems="10" android:inputType="textPersonName" style="@style/inputFields"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                <Button android:textColor="#ffffff" android:id="@+id/register" android:background="@drawable/rounded_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="register" android:backgroundTint="@color/colorIcons"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

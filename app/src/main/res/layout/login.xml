<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:paddingTop="100dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@+id/textView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="Username" android:drawableLeft="@drawable/username" style="@style/label"/>
            <EditText android:id="@+id/usernameLogin" android:background="@drawable/rounded_textview_details" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:hint="username" android:ems="15" android:inputType="textPersonName" style="@style/inputFields"/>
            <TextView android:id="@+id/textView2" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Password" android:drawableLeft="@drawable/password" style="@style/label"/>
            <EditText android:id="@+id/passwordLogin" android:background="@drawable/rounded_textview_details" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:hint="Password" android:ems="15" android:inputType="textPassword" style="@style/inputFields"/>
        </LinearLayout>
        <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <Button android:textColor="#ffffff" android:layout_gravity="center" android:id="@+id/login" android:background="@drawable/rounded_button" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="Login" android:backgroundTint="@color/colorIcons"/>
            <TextView android:textSize="15sp" android:textColor="@color/colorIcons" android:id="@+id/tvForgotPassword" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="Forgot Password?" style="@style/label"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
